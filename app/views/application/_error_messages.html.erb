<% if object && object.errors.size > 0 %>
  <table id="error-explanation" class="text-center table bg-danger">
    <tr>
      <td>
        <h4 class="text-danger"><%= pluralize(object.errors.size, "error") %> prohibited this record from being saved </h4>
        <p>There were problems with the following field(s) :</p>
        <ul>
          <% object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </td>
    </tr>
  </table>
<% end %>
