<%= error_messages_for(f.object) %>
  <% if f.object.section_grades.present?
    section_grades = f.object.section_grades.split(',')
    min_grade = section_grades[0]
    max_grade = section_grades.last
  end %>
    <p id="min-grade" class="hidden"><%= min_grade %></p>
    <p id="max-grade" class="hidden"><%= max_grade %></p>
    <div class="center">
      <%= f.label :section_name, "Section Name" %>
      <%= f.text_field :section_name %>
    </div>
    <br>
  <div class="hidden">
    <div class="form-group">
      <%= f.label :section_grades %>
      <%= f.text_field :section_grades, class: "form-control section_grades" %>
    </div>
    <br><br><br>
  </div>

  <div id="added-grades">
  </div><br>

  <div class="form-inline select-grades">
    <div class="form-group">
      <label for="grades">Starting Grade</label>
      <select name="grades" class="form-control" id="starting-grade">
        <option value="Kindergarten">Kindergarten</option>
        <option value="1st">1st</option>
        <option value="2nd">2nd</option>
        <option value="3rd">3rd</option>
        <option value="4th">4th</option>
        <option value="5th">5th</option>
        <option value="6th">6th</option>
        <option value="7th">7th</option>
        <option value="8th">8th</option>
        <option value="9th">9th</option>
        <option value="10th">10th</option>
        <option value="11th">11th</option>
        <option value="12th">12th</option>
      </select>
    </div>
    <div class="form-group">
      <label for="grades">Ending Grade</label>
      <select name="grades" class="form-control" id="ending-grade">
        <option value="Kindergarten">Kindergarten</option>
        <option value="1st">1st</option>
        <option value="2nd">2nd</option>
        <option value="3rd">3rd</option>
        <option value="4th">4th</option>
        <option value="5th">5th</option>
        <option value="6th">6th</option>
        <option value="7th">7th</option>
        <option value="8th">8th</option>
        <option value="9th">9th</option>
        <option value="10th">10th</option>
        <option value="11th">11th</option>
        <option value="12th">12th</option>
      </select>
    </div>
    <div class="form-group">
      <% if f.object.section_grades.present? %>
        <button type="button" onclick="addGrades()" class="btn btn-primary add-grade">Update grades</button>
      <% else %>
        <button type="button" onclick="addGrades()" class="btn btn-primary add-grade">Add grades to section</button>
      <% end %>
    </div>
  </div><br>

</table>
