<div class="container">
  <h2 class="text-center bg-primary">Notices for Candidates</h2>
  <% if @notices.size > 0 %>
    <% @notices.each do |notice| %>
      <table class="table">
        <tr>
          <th class="text-center"><%= notice.notice_title %></th>
          <td class="text-center">
            <%= link_to("Show notice", notice_path(notice), class:'btn btn-info btn-sm')%>
            <% if logged_in? %>
              <% if current_user.admin? %>
                <%= link_to("Edit notice", edit_notice_path(notice), class:'btn btn-info btn-sm')%>
                <%= link_to 'Destroy notice', notice_path(notice), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-info btn-sm' %>
              <% end %>
            <% end %>
          </td>
        </tr>
      </table>
    <% end %>
  <% else %>
    <h4>No notices availale</h4>
  <% end %>
  <% if logged_in? %>
    <% if current_user.admin? %>
      <%= link_to("Add New Notice", new_notice_path, class:'btn btn-primary') %>
    <% end %>
  <% end %>
</div>
