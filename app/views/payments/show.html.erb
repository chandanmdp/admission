<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <table class=" table text-center">
        <tr>
          <td colspan="4" class="text-primary bg-info"><h3>Payment receipt</h3></td>
        </tr>
          <tr><td colspan="4"><%= image_tag @payment.payment_image.url(:medium) %></td></tr>
          <tr class="text-big text-primary">
            <td class="padding-top bg-light-blue">Payment name : <%= @payment.payment_name %></td>
            <td class="padding-top bg-light-blue">Amount : <%= @payment.amount %></td>
            <td class="padding-top bg-light-blue">Payment mode : <%= @payment.payment_mode %></td>
            <td class="padding-top bg-light-blue">Payment Status : <%= @payment.payment_status %></td>
          </tr>
      </table>
    </div>
  </div>
</div>
